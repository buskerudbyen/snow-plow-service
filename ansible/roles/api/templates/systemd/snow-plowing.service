[Unit]
Description=Run OTP

# Restart once within 20 minutes so that an intermittent network failures are gracefully handled
StartLimitIntervalSec=1200
StartLimitBurst=5

[Service]
User=otp
ExecStartPre=-podman stop --ignore %n
ExecStartPre=-podman rm %n

#ExecStartPre=-send-to-matrix "üîÅ Starting OTP on {{ server_name }}"
ExecStartPre=-podman pull {{ snow_plowing_service_image }}

ExecStart=podman run \
    --name %n \
    --rm -p {{ snow_plowing_service_port }}:8080 \
    -e JAVA_OPTS="-Xmx4G" \
    {{ snow_plowing_service_image }} --load --serve

ExecStop=podman stop --ignore %n
ExecStop=-podman rm %n


Restart=on-failure

[Install]
WantedBy=multi-user.target
